{
    "languageserver": {
        "clangd": {
      		"command": "clangd",
      		"args": ["--background-index", "--log=verbose"],
      		"rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      		"filetypes": ["c", "cpp", "cc", "objc", "objcpp"]
    	},
        "rust": {
      		"command": "ra_lsp_server",
      		"filetypes": ["rust"],
      		"rootPatterns": ["Cargo.toml"]
    	}
    }
}
